<div class="comment">
  <p class="commenter"><%= comment.title %></p>
  <p class="comment_body"><%= comment.body %></p>
</div>

<% if user_signed_in? %>
  <div class="admin">
    <%= link_to 'Destroy Comment', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure you want to delete that?' } %>
  </div>
<% end %>